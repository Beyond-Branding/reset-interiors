<style>
  @media (max-width: 992px) {

    :root {
      --mobile-card-overlap: -100px;
      --mobile-card-width: 95%;

      --mobile-card-top-padding: 0px;
      --mobile-card-side-padding: 20px;
      --mobile-card-bottom-padding: 20px;

      --mobile-title-fontsize: 15px;
      --mobile-title-lineheight: 1.4;
      --mobile-content-spacing: 20px;
    }


    .mry-project-frame.mry-project-half {
      padding-bottom: 30px;
      position: relative;
    }

    .mry-project-half .mry-cover-frame {
      width: 100%;
      height: 50vh;
      position: relative;
    }

    .mry-project-half .mry-project-cover {
      position: absolute !important;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .mry-project-half .mry-main-title-frame {
      position: relative;
      z-index: 10;
      margin-left: auto;
      margin-right: auto;
      background-color: #ffffff;
      box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.15);
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      text-align: center;
      
      /* Using the adjustable variables */
      width: var(--mobile-card-width);
      margin-top: var(--mobile-card-overlap);
      padding: var(--mobile-card-top-padding) var(--mobile-card-side-padding) var(--mobile-card-bottom-padding);
    }

    .mry-content-frame {
      display: flex;
      flex-direction: column;
    }
    
    .swiper-container {
      order: 1;
      position: relative;
      z-index: 2;
    }

    .mry-slider-nav-panel {
      order: 2;
    }

    .mry-slider-pagination-frame {
      order: 3;
    }
    
    .mry-slider-nav-panel {
      position: relative;
      height: auto;
      margin-top: 0;
    }
    
    .mry-slider-progress-bar-frame,
    .mry-slider-arrows .mry-label {
      display: none;
    }

<div class="mry-bottom-mobile-buttons">
  <a class="mry-btn mry-default-link" href="project.html">Open Case</a>
  <a class="mry-btn-text mry-default-link" href="portfolio-grid-1.html">All Projects</a>
</div>


    
    .mry-slider-arrows {
      position: static;
      transform: none;
      width: 100%;
      display: flex;
      justify-content: center;
      gap: 20px; 
      padding: 20px 0;
    }
    
    .mry-main-title {
      transform: none !important;
      opacity: 1 !important;
    }
    
    .mry-main-title-frame .container {
      width: 100%;
      padding: 0;
    }

    .mry-main-title .mry-subtitle {
      display: none;
    }

    .mry-main-title h1 {
      font-size: var(--mobile-title-fontsize);
      line-height: var(--mobile-title-lineheight);
      margin-top: 0;
    }

    .mry-main-title .mry-mb-30 {
      margin-bottom: var(--mobile-content-spacing) !important;
    }
    
    .mry-main-title .mry-btn-text {
        margin-left: 15px;
    }

    .mry-bottom-mobile-buttons {
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: center;
        justify-content: center;
        margin: 20px 0;
    }

.mry-bottom-mobile-buttons a {
      font-size: 10px;
      padding: 4px 8px;
      text-decoration: none;
    }

  }
</style>