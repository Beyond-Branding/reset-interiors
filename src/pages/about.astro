<style>

  .custom-image-layout {
  position: relative;
  width: 100%;
  height: 550px; /* adjust height as needed */
}

.img-box {
  position: absolute;
  border-radius: 10px;
  overflow: hidden;
}

.img-box img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* <<< You can now adjust these manually to match your design >>> */

