  <script>
  // This function animates a single number
  function animateCountUp(element) {
    const finalCount = parseInt(element.textContent, 10);
    const duration = 4000; // Animation duration in milliseconds (4 seconds)
    let startTime = null;

    const step = (timestamp) => {
      if (!startTime) startTime = timestamp;
      const progress = timestamp - startTime;
      const current = Math.min(Math.floor((progress / duration) * finalCount), finalCount);
      element.textContent = current;

      if (progress < duration) {
        window.requestAnimationFrame(step);
      } else {
        element.textContent = finalCount;
      }
    };
    window.requestAnimationFrame(step);
  }

  // This sets up the observer to watch for the section
  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const counters = entry.target.querySelectorAll('.count');
        counters.forEach(counter => {
          animateCountUp(counter);
        });
        observer.unobserve(entry.target);
      }
    });
  }, {
    threshold: 0.5
  });

  // Find the section we want to watch and start observing
  const sectionToWatch = document.querySelector('.arch-section');
  if (sectionToWatch) {
    observer.observe(sectionToWatch);
  }
</script>





