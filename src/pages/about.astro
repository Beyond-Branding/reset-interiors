        overflow: hidden;
      }

      .hero-about::after {
        content: "";
        position: absolute;
        bottom: 15%;
        right: 25%;
        width: 50px;
        height: 50px;
        border: 1px solid rgba(0, 0, 0, 0.15);
        /* border-radius: 50%; */
      }

      .hero-about__grid {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 2rem;
      }

      .hero-about__text,
      .hero-about__image {
        flex-basis: 48%;
        min-width: 350px;
      }

      .hero-about__text {
        position: relative;
      }

      .hero-about__text::after {
        display: none;
      }

      .hero-about__text h2 {
        font-size: 5rem;
        font-weight: 700;
        margin: 0.5rem 0;
        color: #1a1a1a;
        line-height: 1.1;
      }

      .hero-about__text .breadcrumb {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        align-items: center;
        background: transparent !important;
      }

      .hero-about__text .breadcrumb li,
      .hero-about__text .breadcrumb a {
        color: #6c757d;
        text-decoration: none;
        font-size: 1rem;
        text-transform: none;
      }

      .hero-about__text .breadcrumb li + li::before {
        content: "/";
        margin: 0 0.75rem;
      }

      .hero-about__image img {
        width: 100%;
        height: auto;
        /* border-radius: 8px; */
      }

      .about-flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
      }

      .about-text-wrapper,
      .about-image-wrapper {
        flex-basis: 48%;
        min-width: 350px;
      }

      .about-text-wrapper {
        order: 1;
      }
      .about-image-wrapper {
        order: 2;
      }

      .about-image-wrapper img {
        width: 100%;
        height: auto;
        display: block;
        /* border-radius: 24px; */
      }

      .about-me-layout .about-text-wrapper {
        order: 2;
        flex-basis: 55%;
      }
      .about-me-layout .about-image-wrapper {
        order: 1;
        flex-basis: 40%;
      }

      .image-caption {
        text-align: center;
        margin-top: 20px;
      }
      .image-caption h3 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 600;
        color: #684f36;
      }
      .image-caption span {
        font-size: 0.9rem;
        color: #777;
      }

      .abt-imgz {
        margin-bottom: 30px;
        width: 100%;
        max-width: 800px;
      }

      .block2,
      .consultation-sec {
        padding: 96px 0;
      }
    </style>
