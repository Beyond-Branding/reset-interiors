  height: 300px;
}

.img3 {
  bottom: 0;
  left: 0;
  width: 280px;
  height: 190px;
}

.img4 {
  top: 360px;
  left: 300px;
  width: 160px;
  height: 120px;
}



  .hero-about {
    background-color: #f8f8f8;
    padding: 80px 0;
    display: flex;
    align-items: center;
  }

  .hero-about__grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .hero-about__text,
  .hero-about__image {
    flex-basis: 48%;
    min-width: 350px;
  }

  .hero-about__text h2 {
    font-size: 4.5rem;
    font-weight: 700;
    margin: 0.5rem 0;
  }

  .hero-about__text span {
    font-size: 1.25rem;
    color: #555;
  }

  .hero-about__text .breadcrumb {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    align-items: center;
    background: transparent !important;
  }

  .hero-about__text .breadcrumb li {
    color: #777;
    font-size: 0.9rem;
    text-transform: none;
  }

  .hero-about__text .breadcrumb li+li::before {
    content: '/';
    margin: 0 0.5rem;
  }

  .hero-about__text .breadcrumb a {
    color: #777;
    text-decoration: none;
  }

  .hero-about__image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .about-flex-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }

  .about-text-wrapper {
    flex-basis: 48%;
    min-width: 350px;
    order: 1;
  }

  .about-image-wrapper {
    flex-basis: 48%;
    min-width: 350px;
    order: 2;
  }

  .about-image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
  }

  .abt-imgz {
    margin-bottom: 30px;
    width: 100%;
    max-width: 800px; 
  }

  .block2,
  .consultation-sec {
    padding: 50px 0;
  }
</style>