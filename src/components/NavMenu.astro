---
const { activePath } = Astro.props as {
  activePath: string;
};

const navItems = [
  {
    title: "Home",
    href: "/",
  },
  {
    title: "About Us",
    href: "/about",
  },
  {
    title: "Services",
    href: "/services",
  },
  {
    title: "Our Work",
    href: "/our-work",
  },
  {
    title: "Contact",
    href: "/contact",
  },
] as {
  title: string;
  href: string;
}[];
---

<style>
  .current-menu-item {
    color: var(--color-primary) !important;
  }
</style>

<div class="mry-menu">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-md-4">
        <nav
          id="mry-dynamic-menu"
          style="width:fit-content; padding-left:0 !important;"
        >
          <ul>
            {
              navItems.map((item) => (
                <li class="menu-item">
                  <a
                    href={item.href}
                    class={`mry-anima-link mry-default-link ${item.href === activePath ? "current-menu-item" : ""}`}
                  >
                    {item.title}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>
      <div class="col-md-4">
        <div class="mry-info-box-frame">
          <div class="mry-info-box">
            <div class="mry-mb-20">
              <div class="mry-label mry-mb-5">Adress:</div>
              <div class="mry-text">Hong Kong</div>
            </div>
            <div class="mry-mb-20">
              <div class="mry-label mry-mb-5">Email:</div>
              <a class="mry-text" href="mailto:mireya.inbox@mail.com"
                >contact@resetinteriors.com</a
              >
            </div>
            <div class="mry-mb-20">
              <div class="mry-label mry-mb-5">Phone:</div>
              <a class="mry-text" href="#.">(+852) 5261 4604</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
